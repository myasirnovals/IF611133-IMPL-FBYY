<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.SplitPane?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane prefHeight="700.0" prefWidth="1024.0" xmlns="http://javafx.com/javafx/17"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="id.ac.ifunjani.sistemreservasiklinik.controller.DokterDashboardController">

    <top>
        <HBox alignment="CENTER_LEFT" spacing="10.0" style="-fx-background-color: #2c3e50; -fx-padding: 15;">
            <children>
                <Label text="Dashboard Dokter" textFill="WHITE">
                    <font>
                        <Font name="System Bold" size="20.0"/>
                    </font>
                </Label>

                <Region HBox.hgrow="ALWAYS"/>

                <Label fx:id="welcomeLabel" text="Selamat Datang, dr. ..." textFill="WHITE">
                    <font>
                        <Font size="14.0"/>
                    </font>
                </Label>

                <Button mnemonicParsing="false" onAction="#onLogout"
                        style="-fx-background-color: #e74c3c; -fx-text-fill: white;" text="Logout">
                    <HBox.margin>
                        <Insets left="15.0"/>
                    </HBox.margin>
                </Button>
            </children>
        </HBox>
    </top>

    <center>
        <SplitPane dividerPositions="0.35" prefHeight="160.0" prefWidth="200.0" BorderPane.alignment="CENTER">
            <items>

                <VBox spacing="10.0">
                    <padding>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
                    </padding>
                    <children>
                        <Label text="Jadwal Praktik Saya" textFill="#2c3e50">
                            <font>
                                <Font name="System Bold" size="16.0"/>
                            </font>
                        </Label>
                        <TableView fx:id="jadwalTable" prefHeight="200.0" prefWidth="200.0" VBox.vgrow="ALWAYS">
                            <columns>
                                <TableColumn fx:id="colIdJadwal" prefWidth="75.0" text="ID Jadwal"/>
                                <TableColumn fx:id="colHari" prefWidth="80.0" text="Hari"/>
                                <TableColumn fx:id="colJam" prefWidth="120.0" text="Jam"/>
                                <TableColumn fx:id="colTanggal" prefWidth="100.0" text="Tanggal"/>
                            </columns>
                            <columnResizePolicy>
                                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
                            </columnResizePolicy>
                        </TableView>
                    </children>
                </VBox>

                <VBox spacing="15.0">
                    <padding>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
                    </padding>
                    <children>

                        <VBox spacing="5.0" VBox.vgrow="ALWAYS">
                            <children>
                                <Label text="Rekam Medis Terakhir (Log Pasien)" textFill="#2c3e50">
                                    <font>
                                        <Font name="System Bold" size="16.0"/>
                                    </font>
                                </Label>
                                <TableView fx:id="rekamTable" prefHeight="200.0" prefWidth="200.0" VBox.vgrow="ALWAYS">
                                    <columns>
                                        <TableColumn fx:id="colIdRekam" prefWidth="90.0" text="ID Rekam"/>
                                        <TableColumn fx:id="colTglPeriksa" prefWidth="100.0" text="Tgl Periksa"/>
                                        <TableColumn fx:id="colKeluhan" prefWidth="150.0" text="Keluhan"/>
                                        <TableColumn fx:id="colDiagnosa" prefWidth="150.0" text="Diagnosa"/>
                                    </columns>
                                    <columnResizePolicy>
                                        <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
                                    </columnResizePolicy>
                                </TableView>
                            </children>
                        </VBox>

                        <VBox spacing="5.0" VBox.vgrow="ALWAYS">
                            <children>
                                <Label text="Data Rujukan Keluar" textFill="#2c3e50">
                                    <font>
                                        <Font name="System Bold" size="16.0"/>
                                    </font>
                                </Label>
                                <TableView fx:id="rujukanTable" prefHeight="200.0" prefWidth="200.0"
                                           VBox.vgrow="ALWAYS">
                                    <columns>
                                        <TableColumn fx:id="colIdRujukan" prefWidth="90.0" text="ID Rujukan"/>
                                        <TableColumn fx:id="colRsTujuan" prefWidth="150.0" text="RS Tujuan"/>
                                        <TableColumn fx:id="colDeskripsi" prefWidth="200.0" text="Deskripsi Rujukan"/>
                                        <TableColumn fx:id="colIdRekamRef" prefWidth="90.0" text="Ref. ID Rekam"/>
                                    </columns>
                                    <columnResizePolicy>
                                        <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
                                    </columnResizePolicy>
                                </TableView>
                            </children>
                        </VBox>

                    </children>
                </VBox>
            </items>
        </SplitPane>
    </center>

    <bottom>
        <HBox alignment="CENTER" style="-fx-background-color: #ecf0f1; -fx-padding: 5;">
            <Label text="Sistem Reservasi Klinik Â© 2025" textFill="#7f8c8d"/>
        </HBox>
    </bottom>
</BorderPane>