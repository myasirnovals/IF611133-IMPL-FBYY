<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<BorderPane prefHeight="600.0" prefWidth="900.0" xmlns:fx="http://javafx.com/fxml"
            fx:controller="id.ac.ifunjani.sistemreservasiklinik.controller.StaffController">
    <top>
        <HBox spacing="10" style="-fx-background-color: #34495e;">
            <padding>
                <Insets top="15" right="15" bottom="15" left="15"/>
            </padding>
            <Label fx:id="lblNamaStaff" text="Nama Staff" style="-fx-text-fill: white; -fx-font-size: 18px; -fx-font-weight: bold;"/>
            <Pane HBox.hgrow="ALWAYS" />
            <Button text="Logout" onAction="#onLogout" style="-fx-background-color: #e74c3c; -fx-text-fill: white;"/>
        </HBox>
    </top>
    <center>
        <VBox spacing="20">
            <padding>
                <Insets top="20" right="20" bottom="20" left="20"/>
            </padding>

            <HBox spacing="20">
                <VBox alignment="CENTER" prefWidth="180" spacing="5" style="-fx-border-color: #bdc3c7; -fx-background-color: #f8f9fa; -fx-border-radius: 5;">
                    <padding><Insets top="15" bottom="15"/></padding>
                    <Label text="Total Pasien" style="-fx-text-fill: #7f8c8d;"/>
                    <Label fx:id="lblJumlahPasien" text="0" style="-fx-font-size: 28px; -fx-font-weight: bold;"/>
                </VBox>
                <VBox alignment="CENTER" prefWidth="180" spacing="5" style="-fx-border-color: #bdc3c7; -fx-background-color: #f8f9fa; -fx-border-radius: 5;">
                    <padding><Insets top="15" bottom="15"/></padding>
                    <Label text="Total Dokter" style="-fx-text-fill: #7f8c8d;"/>
                    <Label fx:id="lblJumlahDokter" text="0" style="-fx-font-size: 28px; -fx-font-weight: bold;"/>
                </VBox>
                <VBox alignment="CENTER" prefWidth="180" spacing="5" style="-fx-border-color: #bdc3c7; -fx-background-color: #f8f9fa; -fx-border-radius: 5;">
                    <padding><Insets top="15" bottom="15"/></padding>
                    <Label text="Total Reservasi" style="-fx-text-fill: #7f8c8d;"/>
                    <Label fx:id="lblJumlahReservasi" text="0" style="-fx-font-size: 28px; -fx-font-weight: bold;"/>
                </VBox>
            </HBox>

            <TabPane VBox.vgrow="ALWAYS" style="-fx-border-color: #bdc3c7;">
                <tabs>
                    <Tab text="Reservasi" closable="false">
                        <TableView fx:id="tblReservasi">
                            <columns>
                                <TableColumn fx:id="colResId" text="ID" prefWidth="80"/>
                                <TableColumn fx:id="colResPasien" text="Pasien" prefWidth="200"/>
                                <TableColumn fx:id="colResDokter" text="Dokter" prefWidth="200"/>
                                <TableColumn fx:id="colResJadwal" text="Jadwal" prefWidth="150"/>
                                <TableColumn fx:id="colResStatus" text="Status" prefWidth="100"/>
                            </columns>
                        </TableView>
                    </Tab>
                    <Tab text="Pasien" closable="false">
                        <TableView fx:id="tblPasien">
                            <columns>
                                <TableColumn fx:id="colPasienNama" text="Nama Lengkap" prefWidth="300"/>
                                <TableColumn fx:id="colPasienTelp" text="Telepon" prefWidth="200"/>
                            </columns>
                        </TableView>
                    </Tab>
                    <Tab text="Dokter" closable="false">
                        <TableView fx:id="tblDokter">
                            <columns>
                                <TableColumn fx:id="colDokterNama" text="Nama Dokter" prefWidth="300"/>
                                <TableColumn fx:id="colDokterSpesialis" text="Spesialis" prefWidth="200"/>
                            </columns>
                        </TableView>
                    </Tab>
                </tabs>
            </TabPane>
        </VBox>
    </center>
</BorderPane>